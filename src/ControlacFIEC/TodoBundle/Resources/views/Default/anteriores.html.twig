												<td>{{ value.getCursoMateria().getMateriasName() }}</td>
												<td style="text-align: center;">
													<a  href="{{ path('pagina_listado_asistencia', {'action':'index','id_curso':value.getCursoId(),'fecha':fechaTemp,'boolAnterior':1})}}" type="button" title="Revisar Listado" class="btn btn-success"><span class="glyphicon glyphicon-check"></span></a>
												</td>
											</tr>
										{% endfor %}
									</tbody>
                                </table>
                                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
